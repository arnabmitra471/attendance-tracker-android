<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:text="Teacher Registration"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tnameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/temailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tPassTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ems="10"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tConfPassTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:text="Register"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="@string/already_registered"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/reg_loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="Login Here"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>